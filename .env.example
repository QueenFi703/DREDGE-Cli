# DREDGE Environment Configuration
# Copy this file to .env and customize for your deployment
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ──────────────────────────────────────────────────────────────────────
# Application Settings
# ──────────────────────────────────────────────────────────────────────
FLASK_ENV=production
DEBUG=false

# ──────────────────────────────────────────────────────────────────────
# Cache Configuration
# ──────────────────────────────────────────────────────────────────────
CACHE_ENABLED=true
CACHE_BACKEND=redis  # Options: memory, file, redis
CACHE_TTL=3600       # Default TTL in seconds (1 hour)

# Redis Configuration (when CACHE_BACKEND=redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# File Cache Configuration (when CACHE_BACKEND=file)
FILE_CACHE_DIR=.cache

# ──────────────────────────────────────────────────────────────────────
# Monitoring & Metrics
# ──────────────────────────────────────────────────────────────────────
METRICS_ENABLED=true
TRACING_ENABLED=true
LOG_LEVEL=INFO       # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ──────────────────────────────────────────────────────────────────────
# GPU/Compute Configuration
# ──────────────────────────────────────────────────────────────────────
DEVICE=auto          # Options: auto, cpu, cuda, mps
CUDA_VISIBLE_DEVICES=0

# String Theory NN Configuration
STRING_NN_LAYERS=3   # Number of hidden layers (1-10)
STRING_NN_HIDDEN=64  # Hidden layer size
STRING_NN_BATCH_NORM=false

# ──────────────────────────────────────────────────────────────────────
# Worker Configuration
# ──────────────────────────────────────────────────────────────────────
WORKER_CONCURRENCY=4
NUM_WORKERS=2

# ──────────────────────────────────────────────────────────────────────
# Security Settings
# ──────────────────────────────────────────────────────────────────────
# API Authentication (future implementation)
AUTH_ENABLED=false
API_KEY=

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# ──────────────────────────────────────────────────────────────────────
# Multi-tenant Configuration (future implementation)
# ──────────────────────────────────────────────────────────────────────
MULTI_TENANT_ENABLED=false
TENANT_ISOLATION=true

# ──────────────────────────────────────────────────────────────────────
# Server Ports
# ──────────────────────────────────────────────────────────────────────
DREDGE_SERVER_PORT=3001
MCP_SERVER_PORT=3002
METRICS_PORT=9090

# ──────────────────────────────────────────────────────────────────────
# Performance Tuning
# ──────────────────────────────────────────────────────────────────────
# Maximum concurrent connections
MAX_CONNECTIONS=100

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Batch processing
BATCH_SIZE=32
BATCH_TIMEOUT=5
